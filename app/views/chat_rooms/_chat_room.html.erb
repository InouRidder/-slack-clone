<div class="chat-header">
  <h1>#<%= chat_room.name %></h1>
</div>
<div id="messages">
  <% chat_room.messages.each do |message| %>
    <%= render 'messages/message', message: message %>
  <% end %>
</div>
<div class="form">
  <%= simple_form_for [chat_room, message], remote: true do |f| %>
    <%= f.input :content %>
    <%= f.submit %>
  <% end %>
</div>


